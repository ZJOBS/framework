<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="zjobs.dao.LogDao">
    <insert id="insertEntity" parameterType="java.util.Map">
        INSERT INTO log
        (name,email,password)
        VALUE(#{name},#{email},#{password})
    </insert>

    <update id="updateEntity" parameterType="java.util.Map">
        UPDATE log
        <set>
            <if test="name != null">name=#{name},</if>
            <if test="password != null">password=#{password},</if>
            <if test="email != null">email=#{email},</if>
            <if test="isActivating != null">isActivating=#{isActivating}</if>
        </set>
        where id=#{id}
    </update>

    <select id="selectEntity" parameterType="java.util.Map" resultType="zjobs.entity.db.Admin">
        SELECT * FROM log
        <where>
            <if test="id!=null and id!=''">
                id = #{id}
            </if>
            <if test="name!=null and name!=''">
                AND name = #{name}
            </if>
            <if test="password!=null and password!=''">
                AND password = #{password}
            </if>
        </where>
    </select>

    <select id="queryPage" parameterType="Page" resultType="zjobs.entity.db.Admin">
        SELECT * FROM log
        <where>
            <if test="params.id!=null">
                id = #{params.id}
            </if>
            <if test="params.name!=null">
                AND name = #{params.name}
            </if>
            <if test="params.isActivating!=null">
                AND isActivating = #{params.isActivating}
            </if>
        </where>
    </select>
</mapper>
