<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="zjobs.dao.MenuDao">
    <insert id="insertEntity" parameterType="java.util.Map">
        INSERT INTO
        <include refid="table_name"/>
        (menuId,parentId,name,url,activating,image,leaf)
        VALUE(#{menuId},#{parentId},#{name},#{url},#{activating},#{image},#{leaf})
    </insert>

    <update id="updateEntity" parameterType="java.util.Map">
        UPDATE
        <include refid="table_name"/>
        <set>
            <if test="parentId != null">parentId =#{parentId},</if>
            <if test="name != null">name =#{name},</if>
            <if test="url != null">url =#{url},</if>
            <if test="activating != null">activating =#{activating},</if>
            <if test="image != null">image =#{image},</if>
            <if test="leaf != null">leaf =#{leaf}</if>
        </set>
        where menuId=#{menuId}
    </update>

    <select id="selectEntity" parameterType="java.util.Map" resultType="zjobs.entity.db.Menu">
        SELECT * FROM
        <include refid="table_name"/>
        <where>
            <if test="menuId!=null and menuId!=''">
                menuId = #{menuId}
            </if>
            <if test="name!=null and name!=''">
                AND name = #{name}
            </if>
        </where>
    </select>

    <select id="queryPage" parameterType="Page" resultType="zjobs.entity.db.Menu">
        SELECT * FROM
        <include refid="table_name"/>
    </select>

    <select id="getList" parameterType="java.util.Map" resultType="zjobs.entity.db.Menu">
        SELECT * FROM
        <include refid="table_name"/>
    </select>

    <delete id="deleteEntity" parameterType="java.util.Map">
        DELETE FROM
        <include refid="table_name"/>
        WHERE
        menuId = #{menuId}
    </delete>
    <sql id="table_name">
          system_menu
    </sql>
</mapper>