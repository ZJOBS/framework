<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="zjobs.dao.RoleDao">
    <insert id="insertEntity" parameterType="java.util.Map">
        INSERT INTO
        <include refid="table_name"/>
        (roleId,name,activating,description)
        VALUE(#{roleId},#{name},#{activating},#{description})
    </insert>

    <update id="updateEntity" parameterType="java.util.Map">
        UPDATE
        <include refid="table_name"/>
        <set>
            <if test="name != null">name =#{name},</if>
            <if test="activating != null">activating =#{activating},</if>
            <if test="description != null">description =#{description}</if>
        </set>
        where roleId=#{roleId}
    </update>

    <select id="selectEntity" parameterType="java.util.Map" resultType="zjobs.entity.db.Role">
        SELECT * FROM
        <include refid="table_name"/>
        <where>
            <if test="roleId!=null and roleId!=''">
                roleId = #{roleId}
            </if>
            <if test="name!=null and name!=''">
                AND name = #{name}
            </if>
        </where>
    </select>

    <select id="queryPage" parameterType="Page" resultType="zjobs.entity.db.Role">
        SELECT * FROM
        <include refid="table_name"/>
    </select>
    <delete id="deleteEntity" parameterType="java.util.Map">
        DELETE FROM
        <include refid="table_name"/>
        WHERE
        roleId = #{roleId}
    </delete>
    <sql id="table_name">
          system_role
    </sql>
</mapper>